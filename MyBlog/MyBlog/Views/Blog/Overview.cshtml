@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

@model List<MyBlog.Models.Blog>

@{
    ViewBag.Title = "Overview";
}

<h1 style="text-align: center">Travel Blog</h1>

<div class="row">
    @foreach (var blog in Model)
    {
        <div class="col-md-3">
            <div class="card" style="width: 18rem;">
                <img style="width: 100%; height: 150px" src="@blog.ImageURL" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@blog.Title</h5>
                    <h6 class="card-title">Author: @blog.Author</h6>
                    <p class="card-text">@blog.ShortDescription</p>
                    <p>Published on: @blog.EntryDate</p>
                    <a asp-controller="Blog" asp-action="Details" asp-route-id="@blog.Id" class="btn btn-success">See description</a>
                </div>
            </div>
        </div>
    }
</div>
